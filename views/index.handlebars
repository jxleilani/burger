<div class="container">
    <div class="jumbotron text-center">
        Eat Da Burger
    </div>
    <div class="row">
        <div class="col-sm-12 m-auto">
            <div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <li>{{this.burger_name}}</li>
                            {{/unless}}
                        
                        {{/each}}
                        </ul>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <li>{{this.burger_name}}</li>
                            {{/if}}
                        {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col-6 m-auto text-center">
                    <h2>Create a Burger!</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-6 m-auto text-center">
                    <form class="create-form">
                        <div class="form-group">
                            <input type="text" id="burger" name="name">
                        </div>
                        <button type="submit" id="submitBtn">Submit</button>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col-6 m-auto text-center">
                    <p>
                    Enter a burger you'd like to eat.
                    <br>
                    Click the devour button to eat it!
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>